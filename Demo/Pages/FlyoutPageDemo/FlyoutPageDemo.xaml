<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.Pages.FlyoutPageDemo.FlyoutPageDemo">
    <FlyoutPage.Flyout>
        <ContentPage Title="My app" Background="DarkBlue">
            <VerticalStackLayout>
                <Label Text="Flyout" TextColor="White" FontAttributes="Bold" FontSize="50" />
            </VerticalStackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage>
                    <VerticalStackLayout>
                        <Label Text="Detail" />
                    </VerticalStackLayout>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>
